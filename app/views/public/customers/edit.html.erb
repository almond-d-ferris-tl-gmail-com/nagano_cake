<h1><span style="background-color:lightgray">  会員情報編集  </span></h1>
    <!--url(遷移先):public/customers#update()-->
  <%= form_with model: @edit_public_customer, url: customers_information_path , method: :patch do |f| %>
<br>
  <div class="field"><!--autofocus: true：カーソルが移動して入力状態になる→なし-->
    <%= f.label :"氏名" %>
　  　  <%= f.text_field :last_name, autocomplete: "last_name" %>
　　　　<%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"フリガナ" %>
　  　  <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
　　　　<%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %><br>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %><br>
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  </div>
<% end %>
