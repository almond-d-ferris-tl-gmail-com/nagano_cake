<h1>Public::Orders#index</h1>
<h1><span style="background-color:lightgray">  注文履歴一覧  </span></h1>
<br>
  <table border="1" width="1000" class="mx-auto"><!--ボーダーを入れるときは←の設定する(widthはtdの総計)-->
    <thead>
        <tr bgcolor="lightgray" style="text-align:center" height="50">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
    </thead>
  <!---->
    <tbody>
    <% @index_public_order.each do |order| %>
        <tr height="80">
          <td width="100"><%= order.注文日 %></td><!--注文日-->
          <td width="500">〒<%= order.postal_code %><%= order.address %><br><%= order.name %></td><!--郵便番号、住所、氏名-->
          <td width="100"><%= order.item.name %></td><!--注文商品-->
          <td width="100"><%= order.name %></td><!--支払金額-->
          <td width="100"><%= order.name %></td><!--ステータス-->
          <td width="100" align="center"><!--注文詳細-->
            <!--遷移先：public/orders#show(注文履歴詳細)-->
            <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>　　
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>