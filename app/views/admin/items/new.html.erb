<!--<h1>Admin::Items#new</h1>-->

<h1>商品新規登録</h1>
<br>
<%= form_with model: @new_admin_item, url: admin_items_path do |item| %><!--url(遷移先):index-->

  <p>商品画像</p>
  <%= item.file_field :image, accept: "image/*" %>
<br><br>
  <p>商品名</p>
  <%= item.text_field :name %>
<br><br>
  <p>商品説明</p>
  <%= item.text_area :introduction %>
<br><br>
  <p>ジャンル</p>
  <!--プルダウンを実装-->
  <!--%<= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>-->
  <%= item.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
<br><br>
  <p>税抜価格</p>
  <%= item.text_field :price %>
  <p>円</p>
<br><br>
  <p>販売ステータス</p>
    <%= item.radio_button :is_active, :true %>
    <%= item.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
    <%= item.radio_button :is_active, :false %>
    <%= item.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
<br><br>
  <%= item.submit '新規登録', class: "btn btn-success" %>
<% end %>