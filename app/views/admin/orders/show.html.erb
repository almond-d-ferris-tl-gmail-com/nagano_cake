<!--<h1>Admin::Orders#show</h1>-->
<h1><span style="background-color:lightgray">　注文履歴詳細　</span></h1>
<br>
  <table border="0" class="mx-auto">
    <tr>
      <td height="50" width="200">購入者</td>
      <td width="300"><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <td height="50">注文日</td>
      <td width="300"><%= @order.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d") %></td>
      <!--.in_time_zone('Tokyo')→UTC(協定世界時刻のデフォルト値)をJST(日本時間)に換算する-->
      <!--.strftime("%Y-%m-%d")→UTCを消して時刻のフォーマットに変更する-->
    </tr>
    <tr>
      <td height="50">配送先</td>
      <td>
          <%= @order.postal_code %><%= @order.address %><br>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td height="50">支払方法</td>
      <td><%= @order.payment_method_i18n %></td><!--i18n→日本語に変換する-->
    </tr>
    <tr>
      <td height="50">注文ステータス</td><!--プルダウン-->
      <td><%= @order.status %></td><!--path(遷移先):admin/orders#update-->
      
      <td><%= link_to '更新', admin_order_path, class: "btn btn-success" %></td>
    </tr>
  </table>
<br><br>
<div class="container">
  <div class="row">
    <div class="col-9"><!--左側-->
    <table class="table">
      <thead>
        <tr bgcolor="lightgray" height="50">
          <th width="400">商品名</th>
          <th width="200">単価(税込)</th>
          <th width="150">数量</th>
          <th width="200">小計</th>
          <th width="400">製作ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @order.order_details.each do |order| %>
          <tr height="50">
          <!--商品名-->
            <td><%= order.item.name %></td>
          <!--単価(税込)-->
            <td><%= order.item.tax_included_price.to_s(:delimited) %></td>
          <!--数量-->
            <td><%= order.amount %></td>
          <!--小計-->
            <td><%= order.subtotal_price.to_s(:delimited) %></td>
          <!--製作ステータス-->
            <td><%= order.making_status %><!--path(遷移先):admin/orders#update-->
                <%= link_to '更新', admin_order_path, class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div><!--col-9-->

    <div class="col-3"><!--右側-->
      <table border="0">
          <tr height="50">
            <td width="200"><b>商品合計</b></td>
            <td><%= @order.total_payment.to_s(:delimited) %>円</td>
          </tr>
          <tr height="50">
            <td><b>送料</b></td>
            <td width="150"><%= @order.shipping_cost %>円</td>
          </tr>
          <tr height="50">
            <td><b>請求金額合計</b></td>
            <td><%= (@order.total_payment + @order.shipping_cost).to_s(:delimited) %>円</td>
          </tr>      
      </table>
    </div><!--col-3-->
  </div><!--row-->
</div><!--container-->
<br>
