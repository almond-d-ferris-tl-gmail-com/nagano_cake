<h1><span style="background-color:lightgray" class="m-5">　管理者ログイン　</span></h1>
<br>

<!--url:admin/sessions#create-->
<%= form_with model: @admin, url: admin_session_path do |f| %>

  <table class="mx-auto">
    <tr>
      <td height="50" width="150"><%= f.label :"メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>

    <tr>
      <td height="50"><%= f.label :"パスワード" %></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    
    <tr>
      <td></td>
      <td height="50"><%= f.submit "ログイン", class: "btn btn-primary" %></td>
    </tr>
  </table>
<% end %>

<%= render "admin/shared/links" %>
