<!--<h1>Admin::Genres#index</h1>-->
<h1>ジャンル一覧・追加</h1>
  <p>ジャンル名</p>
  <%= form_with model: @genre, url: admin_genres_path do |f| %><!--url(遷移先):index-->
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
  <% end %>
<br>
<table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>
  
      <tbody>
        <% @index_admin_genre.each do |genre| %>
        <tr>
          <td><%= genre.name %>　　　　　<%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td><!--edit画面に遷移-->
        </tr>
        <% end %>
      </tbody>
</table>